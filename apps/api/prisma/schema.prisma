generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String   @id @default(uuid())
  slug        String   @unique
  name        String
  description String?
  address     String?
  phone       String?
  email       String?
  timezone    String   @default("UTC")
  currency    String   @default("USD")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users         RestaurantUser[]
  categories    MenuCategory[]
  menuItems     MenuItem[]
  inventory     Inventory[]
  orders        Order[]
  payments      Payment[]
  paymentConfig RestaurantPaymentConfig[]
  botSessions   BotSession[]

  @@index([slug])
  @@map("restaurants")
}

model RestaurantUser {
  id           String   @id @default(uuid())
  restaurantId String
  email        String
  passwordHash String
  name         String
  role         UserRole
  tokenVersion Int      @default(0) // For refresh token revocation
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([restaurantId, email])
  @@index([restaurantId])
  @@map("restaurant_users")
}

model MenuCategory {
  id           String   @id @default(uuid())
  restaurantId String
  name         String
  description  String?
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  menuItems  MenuItem[]

  @@index([restaurantId])
  @@map("menu_categories")
}

model MenuItem {
  id           String   @id @default(uuid())
  restaurantId String
  categoryId   String
  name         String
  description  String?
  price        Decimal  @db.Decimal(10, 2)
  imageUrl     String?
  isAvailable  Boolean  @default(true)
  displayOrder Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  restaurant Restaurant         @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  category   MenuCategory       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  options    MenuItemOption[]
  inventory  Inventory?
  orderItems OrderItem[]

  @@index([restaurantId])
  @@index([categoryId])
  @@map("menu_items")
}

model MenuItemOption {
  id            String   @id @default(uuid())
  menuItemId    String
  name          String
  isRequired    Boolean  @default(false)
  allowMultiple Boolean  @default(false)
  displayOrder  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  menuItem MenuItem                @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  values   MenuItemOptionValue[]

  @@index([menuItemId])
  @@map("menu_item_options")
}

model MenuItemOptionValue {
  id            String   @id @default(uuid())
  optionId      String
  value         String
  priceModifier Decimal  @default(0) @db.Decimal(10, 2)
  isAvailable   Boolean  @default(true)
  displayOrder  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  option MenuItemOption @relation(fields: [optionId], references: [id], onDelete: Cascade)

  @@index([optionId])
  @@map("menu_item_option_values")
}

model Inventory {
  id                String   @id @default(uuid())
  restaurantId      String
  menuItemId        String   @unique
  quantity          Int      @default(0)
  lowStockThreshold Int      @default(10)
  updatedAt         DateTime @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  menuItem   MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@map("inventory")
}

model Order {
  id            String      @id @default(uuid())
  restaurantId  String
  customerName  String?
  customerEmail String?
  customerPhone String?
  status        OrderStatus @default(CREATED)
  subtotal      Decimal     @db.Decimal(10, 2)
  tax           Decimal     @default(0) @db.Decimal(10, 2)
  total         Decimal     @db.Decimal(10, 2)
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  items      OrderItem[]
  payments   Payment[]

  @@index([restaurantId])
  @@index([status])
  @@map("orders")
}

model OrderItem {
  id              String   @id @default(uuid())
  orderId         String
  menuItemId      String
  menuItemName    String
  quantity        Int
  unitPrice       Decimal  @db.Decimal(10, 2)
  totalPrice      Decimal  @db.Decimal(10, 2)
  selectedOptions String?  @db.Text // JSON
  createdAt       DateTime @default(now())

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([orderId])
  @@map("order_items")
}

model Payment {
  id                 String        @id @default(uuid())
  restaurantId       String
  orderId            String
  provider           PaymentProvider
  providerPaymentId  String?
  amount             Decimal       @db.Decimal(10, 2)
  currency           String        @default("USD")
  status             PaymentStatus @default(PENDING)
  metadata           String?       @db.Text // JSON
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  order      Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@index([orderId])
  @@index([providerPaymentId])
  @@map("payments")
}

model RestaurantPaymentConfig {
  id                  String          @id @default(uuid())
  restaurantId        String
  provider            PaymentProvider
  isActive            Boolean         @default(true)
  publicKey           String?
  encryptedSecretKey  String
  webhookSecret       String?
  metadata            String?         @db.Text // JSON
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([restaurantId, provider])
  @@index([restaurantId])
  @@map("restaurant_payment_configs")
}

model WebhookEvent {
  id              String   @id @default(uuid())
  provider        String
  providerEventId String
  eventType       String
  payload         String   @db.Text // JSON
  status          String   // NO_CONFIG, VERIFICATION_FAILED, PROCESSING, COMPLETED
  createdAt       DateTime @default(now())

  @@unique([provider, providerEventId])
  @@index([provider])
  @@map("webhook_events")
}

model BotSession {
  id            String          @id @default(uuid())
  restaurantId  String
  sessionId     String          @unique
  state         BotSessionState @default(GREETING)
  context       String?         @db.Text // JSON
  cartItems     String?         @db.Text // JSON
  orderId       String?
  lastMessageAt DateTime        @default(now())
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@index([restaurantId])
  @@index([sessionId])
  @@map("bot_sessions")
}

enum UserRole {
  OWNER
  MANAGER
  STAFF
}

enum OrderStatus {
  CREATED
  PAYMENT_PENDING
  PAID
  ACCEPTED
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

enum PaymentProvider {
  STRIPE
  SQUARE
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum BotSessionState {
  GREETING
  BROWSING_MENU
  BUILDING_CART
  CHECKOUT
  PAYMENT
  ORDER_PLACED
  ORDER_STATUS
}

model AuditLog {
  id           String   @id @default(uuid())
  restaurantId String
  userId       String
  action       String   // CREATE, UPDATE, DELETE, VIEW
  resourceType String   // MENU_ITEM, ORDER, PAYMENT_CONFIG, etc.
  resourceId   String?
  changes      String?  @db.Text // JSON
  ipAddress    String?
  userAgent    String?
  metadata     String?  @db.Text // JSON
  timestamp    DateTime @default(now())

  @@index([restaurantId])
  @@index([userId])
  @@index([timestamp])
  @@map("audit_logs")
}
